<!DOCTYPE html>
<html>
  <head>
    <title>Wanwangoodstyousa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto mb-3">
             <% if admin_signed_in? %>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to admin_root_path do %>
                      レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to admin_customers_path do %>
                      会員一覧
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to admin_tags_path do %>
                      タグ一覧
                  <% end %>
                </li>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to destroy_admin_session_path, method: :delete do %>
                       ログアウト
                  <% end %>
                </li>
             <% elsif customer_signed_in? %>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to customer_path(current_customer) do %>
                        マイページ
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to reviews_path do %>
                         レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to new_review_path do %>
                         レビュー投稿
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to destroy_customer_session_path, method: :delete do %>
                         ログアウト
                  <% end %>
                </li>
             <% else %>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to about_path do %>
                         About
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to reviews_path do %>
                          レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to new_customer_registration_path do %>
                          新規登録
                  <% end %>
                </li>
                <li class="nav-item mt-3 mr-4">
                  <%= link_to new_customer_session_path do %>
                          ログイン
                  <% end %>
                </li>
             <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
</body>
  </body>
</html>
