<!DOCTYPE html>
<html>
  <head>
    <title>Wanwangoodstyousa</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div>
        <nav>
          <div>
            <ul>
             <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to admin_root_path do %>
                      レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_customers_path do %>
                      会員一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_tags_path do %>
                      タグ一覧
                  <% end %>
                </li>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete do %>
                       ログアウト
                  <% end %>
                </li>
             <% elsif customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to customer_path(current_customer) do %>
                        マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to reviews_path do %>
                         レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_review_path do %>
                         レビュー投稿
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_customer_session_path, method: :delete do %>
                         ログアウト
                  <% end %>
                </li>
             <% else %>
                <li class="nav-item">
                  <%= link_to about_path do %>
                          About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to reviews_path do %>
                          レビュー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_registration_path do %>
                          新規登録
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to new_customer_session_path do %>
                          ログイン
                  <% end %>
                </li>
             <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
