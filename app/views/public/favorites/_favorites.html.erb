<% if customer_signed_in? %>
  <%if current_customer.favorited_by?(review.id) %>
    <%= link_to review_favorites_path(review), method: :delete, remote: true do %>
       <i class="fas fa-heart", style="color: red;"></i><%= review.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to review_favorites_path(review), method: :post, remote: true do %>
        ♡<%= review.favorites.count %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_customer_session_path do %>
      ♡<%= review.favorites.count %>
  <% end %>
<% end %>

