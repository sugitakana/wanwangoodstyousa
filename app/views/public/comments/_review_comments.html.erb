<% if review.comments.present? %>
  <p>コメント件数：<%= review.comments.count %></p>
  <% review.comments.each do |comment| %>
   <div>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= comment.customer.name %><br>
    <%= comment.comment %>
    <% if comment.customer == current_customer %>
      <%= link_to "削除", review_comment_path(comment.review, comment), method: :delete, remote: true, data: {"turbolinks" => false}, data: {confirm: "本当に削除しますか？"} %>
    <% end %>
   </div>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>