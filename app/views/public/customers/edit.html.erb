<h2>会員情報編集</h2>
<%= form_with model:@customer, url: customer_path do |f| %>
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>
  
  <%= f.label :introduction, "自己紹介文" %>
  <%= f.text_area :introduction %>
  
  <%= f.submit "編集内容を保存" %>
<% end %>

<%= link_to "退会する", confirm_withdraw_path %>