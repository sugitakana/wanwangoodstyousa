<div class="container">
   <div class="form-row">
     <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
       <h2 class="title mx-auto"><i class="fas fa-paw"></i>会員情報編集<i class="fas fa-paw"></i></h2>
        <%= form_with model: @customer, url: customer_path, local: true do |f| %>
         <%= render 'layouts/error_messages', model: @customer %>
          <div class="form-group row mt-4">
            <label for="inputname">名前</label>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group row">
            <label for="inputemail">メールアドレス</label>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group row">
            <label for="inputintroduction">自己紹介文</label>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <div class="form-group text-center">
            <span>
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </span>
        <% end %>
       <span class="ml-5">
         <%= link_to "退会する", confirm_withdraw_customers_path, class: "btn btn-danger" %>
       </span>
     </div>
   </div>
</div>