           <span class="mx-auto">
             <%= link_to "退会しない", customer_path(current_customer), class: "btn btn-primary" %>
           </span>
           <span class="ml-5">
             <%= link_to "退会する", withdraw_customers_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %>
           </span>
        </div>
      </div>
   </div>
</div>
