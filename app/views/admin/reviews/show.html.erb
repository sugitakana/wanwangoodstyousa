<div class="container">
  <h4>レビュー詳細</h4>
  <div class="row">
    <div class="col-md-4">
      <span>投稿者</span><%= link_to admin_customer_path(@review.customer.id), class: "text-decoration-none" do %>
                           <%= @review.customer.name %>さん
                          <% end %>
      <%= image_tag @review.get_image(300, 300) %>
      <div class="mt-3 ml-4"> 
        <%= render "public/reviews/rate", review: @review %>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @review.item_name %></td>
        </tr>
        <tr>
          <th>タグ</th>
          <td><%= @review.tag.name %></td>
        </tr>
        <tr>
          <th>値段（税込）</th>
          <td><%= @review.item_price %>円</td>
        </tr>
        <tr>
          <th>商品を試した犬種</th>
          <td><%= @review.dog_breed %></td>
        </tr>
     </table>
     <p class="font-weight-bold">レビュー</p>
     <%= @review.review %>
     <div class="my-3 text-right">
       <%= link_to "削除する", admin_review_path(@review), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
       <div id="comments_area"> 
        <%= render 'public/comments/review_comments', review: @review %>
      </div>
     </div>
    </div>
  </div>
</div>
  