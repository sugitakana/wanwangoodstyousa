<h4>レビュー詳細</h4>
<%= link_to admin_customer_path(@review.customer.id) do %>
  <%= @review.customer.name %>
<% end %>
<%= image_tag @review.get_image(250, 250) %>

<%= render "public/reviews/rate", review: @review %>

<table>
  <tr>
    <th>商品名</th>
    <td><%= @review.item_name %></td>
  </tr>
  <tr>
    <th>タグ</th>
    <td><%= @review.tag.name %></td>
  </tr>
  <tr>
    <th>値段（税込）</th>
    <td><%= @review.item_price %>円</td>
  </tr>
  <tr>
    <th>商品を試した犬種</th>
    <td><%= @review.dog_breed %></td>
  </tr>
</table>

<p>レビュー</p>
<%= @review.review %>

<%= link_to "削除する", admin_review_path(@review), method: :delete, "data-confirm" => "本当に削除しますか？" %>

<%= render 'public/comments/review_comments', review: @review %>