<div class="container">
  <h3>タグ一覧・追加</h3>
  <div class="row">
    <div class="col-md-4">
     <%= form_with model: @tag, url: admin_tags_path, local: true do |f| %>
      <%= render 'layouts/error_messages', model: @tag %>
       <div class="form-group row">
        <label for="inputname">タグ名</label>
        <%= f.text_field :name, class: "form-control" %>
       </div>
       <div class="text-center mb-4">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
       </div>
     <% end %>
    </div>
    <div class="col-md-6 offset-md-1">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>タグ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>