<h2><%= @customer.name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  <%= f.label :customer_id, "会員ID" %>
  <%= @customer.id  %>
  
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>
  
  <%= f.label :introduction, "自己紹介文" %>
  <%= f.text_area :introduction %>
  
  <%= f.label :is_deleted, "会員ステータス" %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会" %>
  
  <%= f.submit "変更を保存する" %>
<% end %>