<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
     <table class="table">
      <thead class="table-secondary">
       <tr>
        <th>会員ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @customers.each do |customer| %>
        <tr>
         <td><%= customer.id %></td>
         <td><%= link_to admin_customer_path(customer.id), class: "text-decoration-none" do %>
               <%= customer.name %>
             <% end %>
         </td>
         <td><%= customer.email %></td>
         <td><% if customer.is_deleted == false %>
               <p><%= "有効" %></p>
             <% else %>
               <p><%= "退会" %></p>
             <% end %>
         </td>
        </tr>
       <% end %>
       <%= paginate @customers %>
      </tbody>
     </table>
  </div>
</div>