<div class="container">
  <h4 class="mb-4">会員登録情報</h4>
    <div class="row">
      <div class="col-lg-3">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @customer.introduction %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td><% if @customer.is_deleted == false %>
                 <%= "有効" %>
                <% else %>
                 <%= "退会" %>
                <% end %>
            </td>
          </tr>
        </table>
        <div class="my-4 ml-3">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
        </div>
      </div>
      <div class="col-lg-9 mt-4">
       <h5 class="subtittle">投稿されたレビュー一覧</h5>
        <table class="table">
         <% @reviews.each do |review| %>
          <tr>
           <td id="favorite_<%= review.id %>"><%= render "public/favorites/favorite", review: review %></td>
           <td class="image"><%= image_tag review.get_image(200, 200) %></td>
           <td><%= review.item_name %></td>
           <td>¥<%= review.item_price.to_s(:delimited) %></td>
           <td><%= render "public/reviews/rate", review: review %></td>
           <td><%= link_to "レビューを見る", review_path(review.id), class: "btn btn-warning" %></td>
          </tr>
         <% end %>
        </table>
        <%= paginate @reviews %>
      </div>
    </div>
</div>